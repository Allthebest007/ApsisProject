@model List<ListApartWithUserEmailDto>

@{
    ViewData["Title"] = "ShowApartments";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>Apartmanlar</h1>

<table class="table table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Blok-No</th>
            <th scope="col">Daire Tipi</th>
            <th scope="col">Kat-No</th>
            <th scope="col">Dolu/Boş</th>
            <th scope="col">Ev sakini Email</th>

        </tr>
    </thead>
    <tbody>
        @foreach (ListApartWithUserEmailDto apart in Model)
        {
            <tr>
                <th scope="row"></th>
                <td>@apart.BlocNo</td>
                <td>@apart.ApartType</td>
                <td>@apart.FloorNo</td>
                @if (apart.IsActive)
                {
                    <td>Dolu</td>
                }
                else
                {
                    <td>Boş</td>
                }

                <td>
                    @{
                        string emailOfUser = null;
                        if (apart.Useremail == null)
                        {
                            emailOfUser = "Kullanıcı yok";
                        }
                        else
                        {
                            emailOfUser = apart.Useremail;
                        }
                    }
                    @emailOfUser

                </td>

                <td>@Html.ActionLink("Düzenle", "Edit", "Apartment", new { apartmentid = apart.ID }) </td>
                <td>@Html.ActionLink("Sil", "Delete", "Apartment", new { apartmentid = apart.ID }) </td>
            </tr>


        }



    </tbody>
</table>




