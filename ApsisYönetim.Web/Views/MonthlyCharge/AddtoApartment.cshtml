@model ApsisYönetim.Service.DTOs.MonthlyCharge.AddMonthlyChargeDto

@{
    ViewData["Title"] = "AddtoApartment";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<h1>AddtoApartment</h1>

<h4>AddMonthlyChargeDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddtoApartment" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           
            <div class="form-group">
                @Html.LabelFor(model => model.ApartmentID, "Aperment ", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.ApartmentID, ViewBag.apartments as SelectList, "Apartman seçiniz", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Subscription" class="control-label"></label>
                <input asp-for="Subscription" class="form-control" />
                <span asp-validation-for="Subscription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ElectricBill" class="control-label"></label>
                <input asp-for="ElectricBill" class="form-control" />
                <span asp-validation-for="ElectricBill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeatingCost" class="control-label"></label>
                <input asp-for="HeatingCost" class="form-control" />
                <span asp-validation-for="HeatingCost" class="text-danger"></span>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.MonthOfPayment, "Month", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.MonthOfPayment, Html.GetEnumSelectList(typeof(Months)), "Ay seçiniz", htmlAttributes: new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Add Charge" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



