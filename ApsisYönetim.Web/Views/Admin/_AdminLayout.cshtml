<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ApsisYönetim.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    @Html.ActionLink("ApsisYönetim", "Index", "Home")
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @Html.ActionLink("Anasayfa", "Index", "Home", new { @class = "nav-link text-dark" })
                        </li>
                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container" style="margin-top:10px">
            <div class="row">
                <div class="col-md-8">
                    @RenderBody()
                </div>
                <div class="col-md-4">
                    <h3>Admin Menü</h3>
                    @*TODO : Complete the link url *@
                    @*htmlAttributes: new { @class = "control-label col-md-2" }*@

                    @Html.ActionLink("Yeni Kullanıcı Gir", "CreateUser", "User", null, htmlAttributes: new { @class = "btn btn-info btn-block" })
                    @Html.ActionLink("Kullanıcıları Göster", "ShowUser", "Admin", null, htmlAttributes: new { @class = "btn btn-info btn-block" })
                    @Html.ActionLink("Fatura Gir", "AddtoApartment", "MonthlyCharge", null, htmlAttributes: new { @class = "btn btn-info btn-block" })
                    @Html.ActionLink("Yeni Apartman Gir", "Create", "Apartment", null, htmlAttributes: new { @class = "btn btn-info btn-block" })
                    @Html.ActionLink("Apartmanları Göster", "ShowApartments", "Apartment", null, htmlAttributes: new { @class = "btn btn-info btn-block" })
                    @Html.ActionLink("Mesaj Kutusu", "ShowMessagesHaveAdmin", "Note", null, htmlAttributes: new { @class = "btn btn-info btn-block" })
                    @Html.ActionLink("Aylık Borç Göster","SelectMonth", "MonthlyCharge", null, htmlAttributes: new { @class = "btn btn-info btn-block" })


                </div>
            </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - ApsisYönetim - 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
